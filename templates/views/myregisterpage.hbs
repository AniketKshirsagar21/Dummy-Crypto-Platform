        {{!-- <input type="submit" name="sb" value="registerpage" /> --}}


    {{!-- </form> --}}
    {{>header}}

    <section style="background-color: #e4e4e4;">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration"
                        style="border-radius: 1rem;    background-color: #131727d9; color: white;">
                        <div class="card-body p-4 p-md-5" style="text-align:center">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5" style="color: rgb(238, 88, 88);;" >New Registration</h3>
                            <form action="/myregisterpage" method="POST">

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <label class="form-label" for="firstName">First Name</label>
                                            <input required placeholder="Enter first name" type="text" id="firstName" name="fname"
                                                class="form-control form-control-lg" value={{updateFname}}>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <label class="form-label" for="lastName">Last Name</label>
                                            <input  required type="text" placeholder="Enter last name" id="lastName" name="lname"
                                                class="form-control form-control-lg" value={{updateLname}}>
                                        </div>

                                    </div>
                                </div>


                                <div class="row" style="justify-content:center">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline" >
                                            <label class="form-label" for="lastName">Choose User Name :- </label>
                                            <input required type="text" placeholder="Enter Username" id="username" name="Choosen_username"
                                                class="form-control form-control-lg" value={{updateusername}}>
                                                {{#ifEqual notavailable "Username not available"}}
                                            <label class="form-label" style="color: #ff3636;" for="lastName">
                                                {{notavailable}}
                                                 </label>
                                                 {{else}}
                                                 {{/ifEqual}}


                                        </div>

                                    </div>

                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline" >
                                            <label class="form-label" for="phoneNumber">Choose Password</label>
                                            <input required type="tel" placeholder="Enter password" id="phoneNumber" name="Choosen_password"
                                                class="form-control form-control-lg"  value={{updatepassword}}>
                                        </div>

                                    </div>
                                </div>




                                <div class="row">


                                    <div class="col-md-12 mb-4 pb-2">

                                        <div class="form-outline">
                                            <label class="form-label" for="emailAddress">Email </label>
                                            <input required type="email" placeholder="Enter email" id="emailAddress" name="myemail"
                                                class="form-control form-control-lg" value={{updateemail}}>

                                        </div>

                                    </div>

                                </div>
                        <div class="mt-4 pt-2" style="    text-align: center;  margin-bottom: 10px;">
                            <a class="btn btn-danger btn-lg"  style="background-color: rgb(238, 88, 88);border-color:rgb(238, 88, 88); "  href="/">Cancel </a>  
                            <input class="btn btn-primary btn-lg" type="submit" value="Create"  />
                        </div>
                        </div>



                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>

