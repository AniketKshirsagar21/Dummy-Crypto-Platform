<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Dummy Crypto</title>
    <link rel="shortcut icon" type="x-icon" href="https://media.istockphoto.com/vectors/bitcoin-neon-glowing-logo-vector-id935784982?s=612x612">
</head>


<body style="background-color: #e4e4e4;">
    {{>header}}


    {{#ifEqual suc2 "Please Sell some coins and try again"}}

    <div class="row justify-content-center align-items-center h-100" style="margin-top: 30px;">


        <div class="alert alert-danger" role="alert" style="max-width: 400px;">
            <h4 class="alert-heading"> {{suc1}} </h4>
            <p>{{suc2}}</p>
            <form action="/" method="get" style="text-align: center;">

                <button class="btn btn-success btn-lg btn-block" style="background-color: #b10707;"
                    type="submit">OK</button>

            </form>
            <hr>
        </div>

    </div>

    {{else}}
    {{#ifEqual suc1 "Please Login to buy coins !"}}

    <div class="row justify-content-center align-items-center h-100" style="margin-top: 30px;">


        <div class="alert alert-success" role="alert" style="max-width: 400px;">
            <h4 class="alert-heading"> {{suc1}} </h4>

            <form action="/myloginpage" method="get" style="text-align: center;">

                <button class="btn btn-success btn-lg btn-block" style="background-color: #b10707;"
                    type="submit">OK</button>

            </form>
            <hr>
        </div>

    </div>

    {{else}}




    <div class="row ">

        <div class="col ">
             <div style="text-align: center; padding-top: 25px ;font-size: 2rem; ">
                    <strong> For Regular Portfolio</strong>
                </div>
            <div class="container text-center ">

                <div class="table-responsive"
                    style="   margin: 40px auto;  max-width: 400px; border-style: solid;background: #131727d9;color: rgb(230,230,230);">
                    <table class="table">
                        <thead style="color: rgb(255,255,255);background: #010740;">
                            <tr>
                                <th class="text-center" style="padding-bottom: 18px;">Buy Coin</th>
                                <th>


                                </th>
                            </tr>
                        </thead>
                        <tbody style="color: rgb(255,255,255);">
                            <form action="/buy_coin" method="POST">


                                <tr>
                                    <td style="width: 60%;"> <input
                                            style="height: 36px; align-items: center; text-align: center; justify-content: center; color: white; "
                                            type="text" readonly class="form-control-plaintext" id="staticEmail"
                                            name="bcs" value={{buyCoinSymboll}}>
                                        <input
                                            style="height: 36px; align-items: center; text-align: center; justify-content: center; color: white; "
                                            type="text" readonly class="form-control-plaintext" id="staticEmail"
                                            name="bcn" value={{buyCoinName}}>
                                    </td>
                                    <td>

                                        <img style="width: 70px;" onerror='this.style.display = "none"'
                                            data-v-996a917e="" data-v-854cb312="" width="26px" src={{coinImg2}}
                                            alt="Logo" class="coin-logo" data-v-5cd5ab5d="">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Available Balance</td>
                                    <td>₹ {{avbal}}</td>
                                </tr>
                                <tr>
                                    <td>Buying Price</td>
                                    <td>₹ <input
                                            style="height: 36px; align-items: center; text-align: center; justify-content: center; color: white; "
                                            type="text" readonly class="form-control-plaintext" id="staticEmail"
                                            name="bp" value={{BuyPrice}}> </td>
                                </tr>
                                <tr>
                                    <td>Amount in Rs</td>
                                    <td><input type="number"
                                            style="height: 36px; align-items: center; text-align: center; justify-content: center; color: rgb(0, 0, 0); "
                                            placeholder="Enter amount" class="form-control" name="buyAmm"
                                            id="inputPassword"></td>
                                </tr>
                                <tr>
                                    <td> <a class="btn btn-danger btn-lg" href="/"  style="padding: 5px 15px;">Cancel </a> </td>
                                    <td><button class="btn btn-success btn-lg btn-block"    style="padding: 5px 15px;"  type="submit">Buy!</button>
                                    </td>
                                </tr>
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



        <div class="col ">
            <div class="container text-center ">
                <div style="text-align: center; padding-top: 25px ;font-size: 2rem; ">
                    <strong> For Global Portfolio</strong>
                </div>
                <div class="table-responsive"
