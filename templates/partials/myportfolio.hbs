                        <th>Profit<br>Gained</th>
                        <th>Sell<br><br></th>
                    </tr>



                </thead>

                <tbody id="tbody2" class="text-center">


                    {{#ifEqual ls "user"}}

                    {{else}}
                     {{#each ls}}

                    {{#ifCond this.coin_profit 0}}
                    <tr style="color: #eb5555;background-color: rgb(248, 248, 248);">
                        {{else}}
                    <tr  style="color: green; background-color: rgb(248, 248, 248);">
                        {{/ifCond}}

                        {{!-- <td style="width: 25.66670000000001px;">1</td> --}}
                        <td>{{this.coin_symbol}}</td>
                        <td>
                            <strong>
                                {{this.coin_name}}
                            </strong>
                        </td>
                        <td>{{this.coin_current}}</td>
                        <td>{{this.coin_invested_amount}}</td>
                        <td>
                            <strong>
                                {{this.coin_profit}}
                            </strong>
                        </td>
                        <td>
                            <div>
                                <form action="selling_coin" method="post">

                                    <button class="btn btn-success btn-lg" type="submit" name="arrayIndex" 
                                    
                                    style="margin: 0px;
                                            padding: 1px 12px;
                                            font-size: 1.1rem;
                                            margin-bottom: 12px;" value={{@index}}>
                                        SELL
                                    </button>

                                </form>

                            </div>
                        </td>
                    </tr>
                    {{/each}}
                    {{/ifEqual}}


                </tbody>

                <tfoot class="text-center" style="
                border-top: 1.5px solid black;
                color: rgb(0, 0, 0); background-color: rgb(226 226 226);;">
                    {{#ifCond myPortfolio_total_profit 0}}
                    <td></td>
                    <td></td>
                    {{!-- <td></td> --}}

                    <td style="color: red;"> {{myPortfolio_total_Current}} </td>
