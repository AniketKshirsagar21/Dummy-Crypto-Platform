<div class="row mainDiv2">
    <div class="col"
     style="
       border-top: 1px solid black;
     
     padding: 0px;">
        <div class="table-responsive" >
            <table class="table">
                <thead style="background-color: rgb(248, 248, 248); color: rgb(0, 0, 0);" class="text-center">

                    <tr>
                        {{!-- <th class="text-center">Rank<br><br></th> --}}
