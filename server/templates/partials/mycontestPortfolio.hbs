<div class="row mainDiv2">
    <div class="col">
        <h3 class="text-center">Contest Portfolio</h3>
    </div>


</div>



<div class="row mainDiv2">
    <div class="col" style="border-style: solid; padding: 0%;">
        <div class="table-responsive" style="background-color: black;">
            <table class="table">
                <thead style="background-color: black; color: white;">
                    <tr>
                        <th class="text-center">Rank<br><br></th>
                        <th>ID<br><br></th>
                        <th>Name<br><br></th>
                        <th> Current <br>Price <br>   </th>
                        <th>Invested<br>Price<br></th>
                        <th>Profit<br>Gained</th>
                        <th>Sell<br><br></th>
                    </tr>
                </thead>

                <tbody id="tbody2">

                    {{#ifEqual ls "user"}}
                    {{else}}
                    {{#ifEqual ls.coin_symbol1 "Not"}}

                    {{else}}
                    {{#ifCond ls.coin_profit1 0}}
                    <tr class="table-danger">
                        {{else}}
                    <tr class="table-success">
                        {{/ifCond}}
                        <td style="width: 25.66670000000001px;">1</td>
                        <td>{{ls.coin_symbol1}}</td>
                        <td>
                            <strong>

                                {{ls.coin_name1}}
                            </strong>
                        </td>
                        <td>{{ls.coin_current1}}</td>
                        <td>{{ls.coin_invested_amount1}}</td>
                        <td>
                            <strong>

                                {{ls.coin_profit1}}

                            </strong>
                        </td>
                        <td>
                            <div>
                                <form action="/index" method="post">

                                    <button class="btn btn-danger btn-lg" type="submit" name="sl" style="margin: 0px;
                                     padding: 1px 14px;
                                     margin-bottom: 12px;" value={{ls.coin_no1}}>
                                        SELL
                                    </button>

                                </form>

                            </div>
                        </td>
                    </tr>

                    {{/ifEqual}}
                    {{/ifEqual}}


                    {{#ifEqual ls "user"}}

                    {{else}}
                    {{#ifEqual ls.coin_symbol2 "Not"}}

                    {{else}}
                    {{#ifCond ls.coin_profit2 0}}
                    <tr class="table-danger">
                        {{else}}
                    <tr class="table-success">
                        {{/ifCond}}
                        <td style="width: 25.66670000000001px;">2</td>
                        <td>{{ls.coin_symbol2}}</td>
                        <td>
                            <strong>

                                {{ls.coin_name2}}
                            </strong>
                        </td>
                        <td>{{ls.coin_current2}}</td>
                        <td>{{ls.coin_invested_amount2}}</td>
                        <td>
                            <strong>

                                {{ls.coin_profit2}}
                            </strong>
                        </td>
                        <td>
                            <div>
                                <form action="/index" method="post">

                                    <button class="btn btn-danger btn-lg" type="submit" name="sl" style="margin: 0px;
                                     padding: 1px 14px;
                                     margin-bottom: 12px;" value={{ls.coin_no2}}>
                                        SELL
                                    </button>


                                </form>

                            </div>
                        </td>
                    </tr>

                    {{/ifEqual}}
                    {{/ifEqual}}


                </tbody>

                <tfoot style="background-color: rgb(0, 0, 0); ">
                    {{#ifCond myPortfolio_total_profit 0}}
                    <td></td>
                    <td></td>
                    <td></td>

                    <td style="color: red;"> {{myPortfolio_total_Current}} </td>
                    <td style="color: red;"> {{myPortfolio_total_invested}} </td>
                    <td style="color: red;"> {{myPortfolio_total_profit}} </td>
                    <td></td>

                    {{else}}
                    <td></td>
                    <td></td>
                    <td></td>

                    <td style="color: rgb(52, 202, 52);;"> {{myPortfolio_total_Current}} </td>
                    <td style="color: rgb(52, 202, 52);;"> {{myPortfolio_total_invested}} </td>
                    <td style="color: rgb(52, 202, 52);;"> {{myPortfolio_total_profit}} </td>
                    <td></td>
                    {{/ifCond}}
                </tfoot>

            </table>
        </div>
    </div>
</div>